{
  "name": "routehub-oad",
  "version": "0.8.0",
  "description": "RouteHub OpenAPI Description",
  "author": "Juan Manuel Lopez",
  "license": "GNU AFFERO GENERAL PUBLIC LICENSE",
  "devDependencies": {
    "@redocly/cli": "^2.0.5"
  },
  "optionalDependencies": {
    "@stoplight/prism-cli": "^5.14.2",
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "lint": "redocly lint routehub.yaml",
    "bundle-yaml": "redocly bundle -o rhbundle.yaml routehub.yaml",
    "bundle-json": "redocly bundle -o rhbundle.json routehub.yaml",
    "build-man": "redocly build-docs -o rhmanual.html routehub.yaml",
    "premock": "node -e \"if(!require('fs').existsSync('rhbundle.yaml')){process.exit(1)}\" || npm run bundle-yaml",
    "mock": "prism mock rhbundle.yaml",
    "respect": "redocly respect arazzo/* --input token='1234' --server route_hub_api='http://127.0.0.1:4010'"
  },
  "engines": {
    "node": ">= 20.19"
  }
}
